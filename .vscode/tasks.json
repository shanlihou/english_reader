{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Android APK (Debug)",
            "type": "shell",
            "command": "flutter",
            "args": [
                "build",
                "apk",
                "--debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "owner": "flutter",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": {
                        "regexp": "^(Warning|Error):\\s+(.*)$",
                        "severity": 1,
                        "message": 2
                    }
                }
            ]
        },
        {
            "label": "Build Android APK (Release)",
            "type": "shell",
            "command": "flutter",
            "args": [
                "build",
                "apk",
                "--release"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                {
                    "owner": "flutter",
                    "fileLocation": ["relative", "${workspaceFolder}"],
                    "pattern": {
                        "regexp": "^(Warning|Error):\\s+(.*)$",
                        "severity": 1,
                        "message": 2
                    }
                }
            ]
        }
    ]
}
